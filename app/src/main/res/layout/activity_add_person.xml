<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1.60">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Random"
                        android:id="@+id/getPersonButton"
                        android:layout_gravity="right" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="NAAM"
                        android:textSize="20dp"
                        android:textColor="#50A7B3"
                        android:layout_marginBottom="5dp"/>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#728C93"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/naamEditText"
                        android:textSize="20dp"
                        android:textColor="#696969"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="AFBEELDING"
                        android:textSize="20dp"
                        android:textColor="#50A7B3"
                        android:layout_marginBottom="5dp"/>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#728C93"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/afbeeldingEditText"
                        android:textSize="20dp"
                        android:textColor="#696969"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="TELEFOON"
                        android:textSize="20dp"
                        android:textColor="#50A7B3"
                        android:layout_marginBottom="5dp"/>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#728C93"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/telefoonEditText"
                        android:textSize="20dp"
                        android:textColor="#696969"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="EMAIL"
                        android:textSize="20dp"
                        android:textColor="#50A7B3"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"/>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#728C93"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/emailEditText"
                        android:textSize="20dp"
                        android:textColor="#696969"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="ADRES"
                        android:textSize="20dp"
                        android:textColor="#50A7B3"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"/>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#728C93"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/adresEditText"
                        android:textSize="20dp"
                        android:textColor="#696969"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="POSTCODE"
                        android:textSize="20dp"
                        android:textColor="#50A7B3"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"/>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#728C93"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/postcodeEditText"
                        android:textSize="20dp"
                        android:textColor="#696969"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="WOONPLAATS"
                        android:textSize="20dp"
                        android:textColor="#50A7B3"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"/>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#728C93"/>
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/woonplaatsEditText"
                        android:textSize="20dp"
                        android:textColor="#696969"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>